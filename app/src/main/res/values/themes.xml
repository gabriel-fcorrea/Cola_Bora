<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ColaBora" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.ColaBora" parent="Base.Theme.ColaBora" />

    <style name="EditText_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textColorHint">@color/greyText</item>
    </style>

    <style name="Text_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Slogan_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppName_Style">
        <item name="fontFamily">@font/lilita_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/greyText</item>
    </style>

    <style name="Comment_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/greyText</item>
    </style>

    <style name="Button_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="backgroundTint">@color/yellowText</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/CustomBottomNavigationViewTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationViewTextAppearance</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CustomBottomNavigationViewTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/questrial</item>
    </style>

    <style name="Title_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Post_Style">
        <item name="fontFamily">@font/questrial</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>